Option Explicit

Public Function GetDesktopPath() As String
    On Error GoTo GetDesktopPathError
    Dim CheminBureau As String
    
    CheminBureau = vbNullString
    Dim oWSHShell As Object
    Set oWSHShell = CreateObject("WScript.Shell")
    
    CheminBureau = oWSHShell.SpecialFolders("Desktop")
    
    If (Not (oWSHShell Is Nothing)) Then Set oWSHShell = Nothing
    GetDesktopPath = CheminBureau

    Exit Function
GetDesktopPathError:
    If (Not (oWSHShell Is Nothing)) Then Set oWSHShell = Nothing
    GetDesktopPath = vbNullString
End Function
